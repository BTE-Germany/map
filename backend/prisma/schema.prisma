// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Region {
  id                String              @id @default(uuid())
  username          String
  description       String?             @db.Text
  userUUID          String
  ownerID           String?
  owner             User?               @relation(fields: [ownerID], references: [id], onDelete: Cascade)
  data              String              @db.Text
  city              String
  area              Int
  createdAt         DateTime            @default(now())
  images            Image[]
  additionalBuilder AdditionalBuilder[]
  isEventRegion     Boolean             @default(false)
  isPlotRegion      Boolean             @default(false)
  buildings         Int                 @default(0)
  osmDisplayName    String              @default("")
  isFinished        Boolean?            @default(false)
}

model User {
  id                 String   @id @default(uuid())
  ssoId              String   @unique
  discordId          String?
  regions            Region[]
  blockedFromReports Boolean  @default(false)
  minecraftUUID      String?  @default("")
}

model LinkCodes {
  id         String   @id @default(uuid())
  code       String   @unique
  playerUUID String
  createdAt  DateTime @default(now())
}

model Image {
  id        String @id @default(uuid())
  region    Region @relation(fields: [regionId], references: [id], onDelete: Cascade)
  regionId  String
  imageData String
}

model AdditionalBuilder {
  id            String @id @default(uuid())
  minecraftUUID String
  username      String
  region        Region @relation(fields: [regionId], references: [id], onDelete: Cascade)
  regionId      String
}

model InteractiveBuilding {
  id       String @id @default(uuid())
  name     String
  fileURL  String
  origin   String
  altitude Int
  rotate   String
}
